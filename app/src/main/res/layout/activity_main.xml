<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hacker.a1stspider.a1stspider.MainActivity"
    android:id="@+id/bg"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spider Inductions 2016"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_marginTop="63dp"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:id="@+id/textView3"
        android:layout_marginTop="38dp"
        android:textSize="20sp"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/depart"
        android:spinnerMode="dropdown"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/done"
        android:layout_alignStart="@+id/done"
        android:background="#ea3939"
        android:popupBackground="#ea3939" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/depart"
        android:layout_alignStart="@+id/depart"
        android:textColor="#ffffff"
        android:editable="false"
        android:visibility="visible"
        android:capitalize="words"
        android:backgroundTint="#fa0c0c" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollno"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textColor="#ffffff"
        android:editable="false"
        android:phoneNumber="true"
        android:visibility="visible"
        android:backgroundTint="#e30505" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppDev"
        android:id="@+id/ad"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:checked="false"
        android:textColor="#ffffff"
        android:buttonTint="#f80404" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Webdev"
        android:id="@+id/wd"
        android:layout_alignTop="@+id/ad"
        android:layout_toRightOf="@+id/ad"
        android:layout_toEndOf="@+id/ad"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:checked="false"
        android:textColor="#ffffff"
        android:buttonTint="#f80404" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorithm"
        android:id="@+id/al"
        android:checked="false"
        android:layout_below="@+id/ad"
        android:layout_alignLeft="@+id/ad"
        android:layout_alignStart="@+id/ad"
        android:textColor="#ffffff"
        android:buttonTint="#f80404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentor (Required)"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_above="@+id/done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/rollno"
        android:layout_alignEnd="@+id/rollno"
        android:checked="true"
        android:text="no" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tronix"
        android:id="@+id/tr"
        android:checked="false"
        android:layout_below="@+id/wd"
        android:layout_alignLeft="@+id/wd"
        android:layout_alignStart="@+id/wd"
        android:textColor="#ffffff"
        android:buttonTint="#f80404" />

</RelativeLayout>
